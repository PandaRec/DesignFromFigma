<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.designfromfigma2">
    <!--пространство имен -->
    <!--имя пакеты приложения -->
    <!--это были строки 3 и 4 -->

    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DesignFromFigma2">
        <!--application - описание комонентов приложения -->
        <!--allowBackup - будет ли создана резервная копия -->
        <!--icon - иконка приложения -->
        <!--label - нзвание приложение, которое видно на тлф  -->
        <!--roundIcon - круглая иконка приложения -->
        <!--supportsRtl - для работы с правсторонней ориентацией -->
        <!--theme - тема приложения -->

        <activity android:name=".MainActivity"></activity>  <!--theme - этот тег описвает все активити в приложении -->
        <activity
            android:name=".StartActivity"
            android:label="@string/app_name">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" /> <!--theme - входная точка программы-->

                <category android:name="android.intent.category.LAUNCHER" /> <!--стартовый экран, который отображается при запуске приложения -->
            </intent-filter>
        </activity>
    </application>


</manifest>