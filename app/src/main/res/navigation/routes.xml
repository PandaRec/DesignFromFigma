<?xml version="1.0" encoding="utf-8"?>


    <navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/routes"
        app:startDestination="@+id/navigation_home">

        <fragment
            android:id="@+id/navigation_home"
            android:name="com.example.designfromfigma2.ui.home.HomeFragment"
            android:label="Fragment Home"
            tools:layout="@layout/fragment_home" >
            <argument
                android:name="id"
                app:argType="integer"
                app:nullable="false"/>
            <argument
                android:name="_id"
                app:argType="string"
                app:nullable="false"/>
            <argument
                android:name="title"
                app:argType="string"
                app:nullable="false"/>
            <argument
                android:name="rating"
                app:argType="integer"
                app:nullable="false"/>
            <argument
                android:name="processor"
                app:argType="string"
                app:nullable="false"/>
            <argument
                android:name="camera"
                app:argType="string"
                app:nullable="false"/>
            <argument
                android:name="RAM"
                app:argType="string"
                app:nullable="false"/>
            <argument
                android:name="ROM"
                app:argType="string"
                app:nullable="false"/>
            <argument
                android:name="price"
                app:argType="string"
                app:nullable="false"/>
            <argument
                android:name="imageURL"
                app:argType="string"
                app:nullable="false"/>
            <action
                android:id="@+id/action_navigation_home_to_navigation_details"
                app:destination="@id/navigation_details" >



            </action>
            <action
                android:id="@+id/action_navigation_home_to_navigation_cart"
                app:destination="@id/navigation_cart" />
        </fragment>

        <fragment
            android:id="@+id/navigation_details"
            android:name="com.example.designfromfigma2.ui.details.DetailsFragment"
            android:label="Fragment Details"
            tools:layout="@layout/fragment_details" >
            <argument
                android:name="id"
                app:argType="integer"
                app:nullable="false"/>
            <argument
                android:name="_id"
                app:argType="string"
                app:nullable="false"/>

            <argument
                android:name="title"
                app:argType="string"
                app:nullable="false"/>
            <argument
                android:name="rating"
                app:argType="integer"
                app:nullable="false"/>
            <argument
                android:name="processor"
                app:argType="string"
                app:nullable="false"/>
            <argument
                android:name="camera"
                app:argType="string"
                app:nullable="false"/>
            <argument
                android:name="RAM"
                app:argType="string"
                app:nullable="false"/>
            <argument
                android:name="ROM"
                app:argType="string"
                app:nullable="false"/>
            <argument
                android:name="price"
                app:argType="string"
                app:nullable="false"/>
            <argument
                android:name="imageURL"
                app:argType="string"
                app:nullable="false"/>
        </fragment>

    <fragment
        android:id="@+id/navigation_cart"
        android:name="com.example.designfromfigma2.ui.cart.CartFragment"
        android:label="Fragment Cart"
        tools:layout="@layout/fragment_cart"/>


    </navigation>

