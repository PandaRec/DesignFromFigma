<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:cardCornerRadius="20dp"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/mainImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hot_sale_new_3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:adjustViewBounds="true"
            />
        <ImageView
            android:id="@+id/ellipse_new"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_ellipse_orange"
            app:layout_constraintTop_toTopOf="@id/mainImage"
            app:layout_constraintStart_toStartOf="@id/mainImage"
            android:layout_marginStart="24dp"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/ellipse_new"
            app:layout_constraintBottom_toBottomOf="@id/ellipse_new"
            app:layout_constraintStart_toStartOf="@id/ellipse_new"
            app:layout_constraintEnd_toEndOf="@id/ellipse_new"
            android:text="New"
            android:fontFamily="@font/sf_pro_display_regular"
            style="@style/font_700_white"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/textViewHotSaleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iphone 12"
            android:fontFamily="@font/sf_pro_display_regular"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@id/ellipse_new"
            style="@style/font_700_white"
            app:layout_constraintStart_toStartOf="@id/mainImage"
            android:layout_marginStart="24dp"
            android:layout_marginTop="18dp"/>
        <TextView
            android:id="@+id/textViewHotSaleDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Súper. Mega. Rápido."
            app:layout_constraintTop_toBottomOf="@id/textViewHotSaleTitle"
            app:layout_constraintStart_toStartOf="@id/mainImage"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/sf_pro_display_regular"
            style="@style/font_400_white"
            android:layout_marginTop="5dp"/>
<!--        <Button-->
<!--            android:layout_width="98dp"-->
<!--            android:layout_height="23dp"-->
<!--            app:layout_constraintTop_toBottomOf="@id/textViewHotSaleDescription"-->
<!--            app:layout_constraintStart_toStartOf="@id/mainImage"-->
<!--            android:layout_marginStart="24dp"-->
<!--            android:layout_marginTop="24dp"-->
<!--            android:background="@drawable/rounded_button"-->
<!--            android:text="Buy now!"-->
<!--            android:padding="1dp"-->
<!--            android:fontFamily="@font/sf_pro_display_regular"-->
<!--            android:textSize="11sp"-->
<!--            style="@style/font_700_dark_blue"-->


<!--            />-->

        <TextView
            android:layout_width="98dp"
            android:layout_height="23dp"
            app:layout_constraintTop_toBottomOf="@id/textViewHotSaleDescription"
            app:layout_constraintStart_toStartOf="@id/mainImage"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:textSize="11sp"
            android:text="Buy now!"
            android:background="@drawable/rounded_button"
            android:gravity="center"
            android:fontFamily="@font/sf_pro_display_regular"
            style="@style/font_700_dark_blue"/>






    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>