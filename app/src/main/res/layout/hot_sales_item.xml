<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/mainImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/hot_sale_new_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ellipse_new"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_ellipse_orange"
            app:layout_constraintStart_toStartOf="@id/mainImage"
            app:layout_constraintTop_toTopOf="@id/mainImage" />

        <TextView
            style="@style/font_700_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display_regular"
            android:text="@string/label_new"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/ellipse_new"
            app:layout_constraintEnd_toEndOf="@id/ellipse_new"
            app:layout_constraintStart_toStartOf="@id/ellipse_new"
            app:layout_constraintTop_toTopOf="@id/ellipse_new" />

        <TextView
            android:id="@+id/textViewHotSaleTitle"
            style="@style/font_700_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/sf_pro_display_regular"
            android:text="@string/label_iphone_12"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="@id/mainImage"
            app:layout_constraintTop_toBottomOf="@id/ellipse_new" />

        <TextView
            android:id="@+id/textViewHotSaleDescription"
            style="@style/font_400_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/sf_pro_display_regular"
            android:text="@string/label_s_per_mega_r_pido"
            app:layout_constraintStart_toStartOf="@id/mainImage"
            app:layout_constraintTop_toBottomOf="@id/textViewHotSaleTitle" />

        <TextView
            style="@style/font_700_dark_blue"
            android:layout_width="98dp"
            android:layout_height="23dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/sf_pro_display_regular"
            android:gravity="center"
            android:text="@string/label_buy_now"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="@id/mainImage"
            app:layout_constraintTop_toBottomOf="@id/textViewHotSaleDescription" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>