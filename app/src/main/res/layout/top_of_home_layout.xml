<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ic_geopoint"
        android:layout_width="12dp"
        android:layout_height="15.31dp"
        android:layout_marginEnd="15.12dp"
        android:src="@drawable/ic_geopoint"
        app:layout_constraintBottom_toBottomOf="@id/spinnerGeo"
        app:layout_constraintEnd_toStartOf="@id/spinnerGeo"
        app:layout_constraintTop_toTopOf="@id/spinnerGeo"

        />

    <Spinner
        android:id="@+id/spinnerGeo"
        style="@style/SpinnerTheme"
        android:layout_width="140dp"
        android:layout_height="19dp"
        android:layout_marginTop="21dp"
        android:clickable="false"
        android:entries="@array/testArrayForSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ic_filter"
        android:layout_width="11dp"
        android:layout_height="13dp"
        android:layout_marginEnd="35dp"
        android:src="@drawable/ic_filter"
        app:layout_constraintBottom_toBottomOf="@id/spinnerGeo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/spinnerGeo" />


</androidx.constraintlayout.widget.ConstraintLayout>