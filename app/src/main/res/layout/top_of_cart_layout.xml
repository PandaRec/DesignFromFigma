<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/roundedBack"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:background="@drawable/exit_filter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="36sp"
        android:layout_marginStart="42dp" />
    <View
        android:layout_width="14dp"
        android:layout_height="17dp"
        android:background="@drawable/ic_back_arrow"
        app:layout_constraintTop_toTopOf="@id/roundedBack"
        app:layout_constraintStart_toStartOf="@id/roundedBack"
        app:layout_constraintBottom_toBottomOf="@id/roundedBack"
        app:layout_constraintEnd_toEndOf="@id/roundedBack"/>

    <View
        android:id="@+id/roundedAddress"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:background="@drawable/rounded_backet"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="46dp"/>
    <View
        android:layout_width="14dp"
        android:layout_height="17.87dp"
        android:background="@drawable/ic_geopoint_white"
        app:layout_constraintTop_toTopOf="@id/roundedAddress"
        app:layout_constraintBottom_toBottomOf="@id/roundedAddress"
        app:layout_constraintStart_toStartOf="@id/roundedAddress"
        app:layout_constraintEnd_toEndOf="@id/roundedAddress"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_address"
        style="@style/font_500_dark_blue"
        android:fontFamily="@font/mark_pro"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@id/roundedAddress"
        app:layout_constraintBottom_toBottomOf="@id/roundedAddress"
        app:layout_constraintEnd_toStartOf="@id/roundedAddress"
        android:layout_marginEnd="9dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>