<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="@color/background">

    <ImageView
        android:id="@+id/ic_geopoint"
        android:layout_width="12dp"
        android:layout_height="15.31dp"
        android:src="@drawable/ic_geopoint"
        app:layout_constraintTop_toTopOf="@id/spinnerGeo"
        app:layout_constraintBottom_toBottomOf="@id/spinnerGeo"
        app:layout_constraintEnd_toStartOf="@id/spinnerGeo"
        android:layout_marginEnd="15.12dp"

        />
    <Spinner
        android:id="@+id/spinnerGeo"
        android:layout_width="140dp"
        android:layout_height="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:entries="@array/testArrayForSpinner"
        style="@style/SpinnerTheme"
        android:clickable="false"
        android:layout_marginTop="21dp"
        />
    <ImageView
        android:id="@+id/ic_filter"
        android:layout_width="11dp"
        android:layout_height="13dp"
        android:src="@drawable/ic_filter"
        app:layout_constraintTop_toTopOf="@id/spinnerGeo"
        app:layout_constraintBottom_toBottomOf="@id/spinnerGeo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="35dp"
        />
    <TextView
        android:id="@+id/label_select_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/spinnerGeo"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Select Category"
        style="@style/font_700_dark_blue"
        android:textSize="25sp"
        android:layout_marginTop="18dp"
        android:layout_marginStart="17dp"/>
    <TextView
        android:id="@+id/label_view_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="view all"
        app:layout_constraintTop_toTopOf="@id/label_select_category"
        app:layout_constraintBottom_toBottomOf="@id/label_select_category"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/font_400_orange"
        android:textSize="15sp"
        android:layout_marginEnd="33dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/label_select_category"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="27dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        />




</androidx.constraintlayout.widget.ConstraintLayout>